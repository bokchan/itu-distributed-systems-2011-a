<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<EditText 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:id="@+id/SearchEditText">
	</EditText>
	<Button 
		android:layout_height="wrap_content"  
		android:layout_width="fill_parent" 
		android:id="@+id/SearchOkButtonFlickr"
		android:onClick="doStartSearch" 
		android:text="Search on FlickR"></Button>
		<Button  
		android:layout_height="wrap_content"  
		android:layout_width="fill_parent" 
		android:id="@+id/SearchOkButtonYahoo"
		android:onClick="doStartSearchYahoo" 
		android:text="Search on Yahoo"></Button>
		<Button  
		android:layout_height="wrap_content"  
		android:layout_width="fill_parent" 
		android:id="@+id/SearchOkButtonGoogle"
		android:onClick="doStartSearchGoogle" 
		android:text="Search on Google"></Button>	
</LinearLayout>
