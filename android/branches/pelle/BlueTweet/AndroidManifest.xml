<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="dk.itu.smds.android.bluetweet"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".BlueTweetActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    <service android:name=".simple.BlueTweetService">
    	<intent-filter>
    		<action android:name="dk.itu.android.bluetweet.START_BLUETWEET_SERVICE"></action>
		</intent-filter>
    </service>
    
	<provider android:name=".provider.BlueTweetProvider" android:authorities="dk.itu.android.provider.BlueTweet"></provider>
    
</application>
    <uses-sdk android:minSdkVersion="5" />
<uses-permission android:name="android.permission.BLUETOOTH_ADMIN"></uses-permission>
<uses-permission android:name="android.permission.BLUETOOTH"></uses-permission>
<uses-permission android:name="android.permission.INTERNET"></uses-permission>

</manifest> 